{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/assets/*": ["./assets/*"],
      "~/src/*": ["./src/*"],
      "~/theme/*": ["./src/theme/*"],
      "~/components/*": ["./src/components/*"],
      "~/navigation/*": ["./src/navigation/*"],
      "~/screens/*": ["./src/screens/*"],
      "~/slices/*": ["src/redux/slices/*"],
      "~/utils/*": ["./src/utils/*"]
    },
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "isolatedModules": true,
    "module": "esnext",
    "strict": true,
    "removeComments": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["./src/**/*", "**/*.ts", "**/*.tsx"]
}
